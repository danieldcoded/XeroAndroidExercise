<?xml version="1.0" encoding="utf-8"?>
<com.xero.interview.bankrecmatchmaker.CheckedListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/default_content_padding"
    android:paddingRight="@dimen/default_content_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginStart="@dimen/default_content_padding"
        android:layout_marginLeft="@dimen/default_content_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_main"
                style="@style/CellRegularText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Invoice header" />

            <TextView
                android:id="@+id/text_total"
                style="@style/CellRegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$999.99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sub_left"
                style="@style/CellSubText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="01 Jan" />

            <TextView
                android:id="@+id/text_sub_right"
                style="@style/CellSubText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                tools:text="Sales invoice" />
        </LinearLayout>

    </LinearLayout>


</com.xero.interview.bankrecmatchmaker.CheckedListItem>